{
  "name": "resemble-image",
  "version": "1.0.1",
  "description": "Provide color stops for a gradient that loosely resembles the original image.",
  "main": "dist/main.js",
  "scripts": {
    "pretest": "eslint src",
    "prepublish": "del-cli dist && cross-env BABEL_ENV=publish babel src --out-dir dist --ignore /__tests__/",
    "report": "nyc report --reporter=html",
    "test": "cross-env BABEL_ENV=test BABEL_DISABLE_CACHE=1 nyc --check-coverage --lines 100 ava"
  },
  "author": {
    "name": "Manuel Wieser",
    "email": "office@manuelwieser.com",
    "url": "https://manu.ninja/"
  },
  "contributors": [
    {
      "name": "Ben Briggs",
      "email": "beneb.info@gmail.com",
      "url": "http://beneb.info"
    }
  ],
  "homepage": "https://manu.ninja/thoughts-on-linear-gradients-that-resemble-images",
  "repository": "https://github.com/Lorti/resemble-image",
  "license": "MIT",
  "dependencies": {
    "jimp": "^0.2.27",
    "neuquant-js": "^0.2.0"
  },
  "devDependencies": {
    "ava": "^0.15.0",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-register": "^6.7.2",
    "cross-env": "^1.0.7",
    "del-cli": "^0.2.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "nyc": "^7.1.0-candidate2"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/__tests__"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "babel": "inherit",
    "require": "babel-register"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "warn",
        120
      ],
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-mixed-operators": [
        "error",
        {
          "allowSamePrecedence": true
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      },
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
